<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:backgroundTint">@color/verde1</item>
    </style>
    <style name="Button1_land">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:backgroundTint">@color/verde1</item>
    </style>

    <style name="Layout1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.6</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="buttonlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeColor">@android:color/white</item>
    </style>
    <style name="buttonlined_land" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeColor">@android:color/white</item>
    </style>

    <style name="Theme.Nicestart.ActionBar.Transparent" parent="Theme.MaterialComponents.DayNight">
        <!-- Mantener el ActionBar y hacerlo superponer el contenido -->
        <item name="windowActionBar">true</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- Hacer el fondo de la ventana del contenido transparente -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Estilo del ActionBar -->
        <item name="actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <!-- Estilo personalizado para hacer el ActionBar transparente -->
    <style name="TransparentActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item> <!-- Quitar sombra si es necesario -->
    </style>
</resources>